{
    "extends": [
        "eslint:recommended",
        "google",
        "plugin:jest/recommended"
    ],
    "plugins": [
        "jest",
        "compat"
    ],
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": ["error", 4],
        "max-len": ["error", {
            "code": 125,
            "comments": 200,
            "ignoreUrls": true,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true,
            "ignoreRegExpLiterals": true
        }],
        "require-jsdoc": 0
    }
}